    navi_window_height_no_mobile="400"
  />

  <!--
map_new_styles_list: night_mode|dark_mode|blue_mode|silver_mode|light_mode|retro_mode -> you can use all or single
map_new_styles_names: Night|Dark|Blue|Silver|Light|Retro -> use you own names for a new map styles (set a new names or set FALSE)
map_activestyle: dark_mode -> start with a new map mode (set a new style or set FALSE)
 -->
  <umbrella_settings
    map_zoom="13"
    map_new_styles_list="dark_mode|blue_mode|silver_mode|retro_mode"
    map_new_styles_names="false"
    map_activestyle="retro_mode"
    />

<!-- action POI --> 
  <umbrella_settings
    poi_size="35|30"
    poi_css_size="18"
    poi_roundedge="3"
    poi_panorama_roundedge="200"
    poi_flip_color="true"

    poi_panorama_color="#251695"
