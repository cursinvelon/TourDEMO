<!-- index -->
  <umbrella_settings
    infobox_ico="[i class='fa fa-info' aria-hidden='true'/]"
    thumbs_size.no-mobile="150"
    thumbs_size.mobile="80"
    />

<!-- navi -->
  <umbrella_settings
    show_plan_ico="[i class='fa fa-map' aria-hidden='true'/]"
    show_map_ico="[i class='fa fa-map-marker' aria-hidden='true'/]"
    show_info_ico="[i class='fa fa-commenting' aria-hidden='true'/]"
    show_history_ico="[i class='fa fa-undo' aria-hidden='true'/]"
    show_favorite_ico="[i class='fa fa-heart' aria-hidden='true'/]"
