    menu_open_ico="[i class='fa fa-plus' aria-hidden='true'/]"
    font_family_global="Roboto Condensed, sans-serif;"

    vr_ico="[i class='fa fa-simplybuilt fa-rotate-180' aria-hidden='true'/]"
